                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="LSP"
                    android:textColor="#000000"
                    android:minWidth="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.2"/>

