<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dashboard_item_container_sub_bg_black"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        tools:text="Project Name"/>

    <TextView
        android:id="@+id/caption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:text="Piutang Usaha"
        android:layout_marginTop="10dp"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/piutang_usaha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caption1"
        android:textColor="#FFF"
        tools:text="1.009" />

    <TextView
        android:id="@+id/caption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#FFF"
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:text="Tagihan Bruto" />

    <TextView
        android:id="@+id/tagihan_bruto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#FFF"
        android:layout_below="@id/caption2"
        tools:text="1.234" />




    <TextView
        android:id="@+id/caption3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/piutang_usaha"
        android:layout_marginTop="10dp"
        android:text="Piutang Retensi"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/piutang_retensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caption3"
        android:textColor="#FFF"
        tools:text="1.009" />

    <TextView
        android:id="@+id/caption4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#FFF"
        android:layout_below="@id/piutang_usaha"
        android:layout_marginTop="10dp"
        android:text="PDP" />

    <TextView
        android:id="@+id/pdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#FFF"
        android:layout_below="@id/caption4"
        tools:text="1.234" />

    <TextView
        android:id="@+id/caption5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:layout_below="@id/piutang_retensi"
        android:layout_marginTop="10dp"
        android:text="BAD" />

    <TextView
        android:id="@+id/bad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:layout_below="@id/caption5"
        tools:text="1.234" />

</RelativeLayout>