<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#2E3C42"
    tools:context="id.co.wika.pcddashboard.MainActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="#2E3C42">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Jan, 2017"
                android:id="@+id/month_select_label"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textAlignment="center"
                android:padding="0dp"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/dashboard_scroll_view"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fillViewport="false"
            android:padding="0dp"
            android:scrollIndicators="none">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="1333dp"
                android:descendantFocusability="blocksDescendants">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:id="@+id/dots"
                    android:paddingRight="11dp"
                    android:layout_gravity="right"
                    android:gravity="right">

                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/dashboard_pager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                </android.support.v4.view.ViewPager>

                <android.support.v4.view.ViewPager
                    android:id="@+id/month_select_pager"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=""
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="19sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="RKAP"
                            android:id="@+id/dashboard_text1"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="19sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Ri"
                            android:id="@+id/dashboard_text2"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="19sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Prognosa"
                            android:id="@+id/dashboard_text3"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="19sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:background="@drawable/dashboard_bg1"
                        android:layout_margin="10dp"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OK"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="21sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="349"
                            android:id="@+id/dashboard_text11"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="247"
                            android:id="@+id/dashboard_text21"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="350"
                            android:id="@+id/dashboard_text31"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:background="@drawable/dashboard_bg2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OP"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="21sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="349"
                            android:id="@+id/dashboard_text12"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="247"
                            android:id="@+id/dashboard_text22"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="350"
                            android:id="@+id/dashboard_text32"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:background="@drawable/dashboard_bg3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LSK"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textSize="21sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="349"
                            android:id="@+id/dashboard_text13"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="247"
                            android:id="@+id/dashboard_text23"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="350"
                            android:id="@+id/dashboard_text33"
                            android:textColor="#fff"
                            android:layout_weight="1"
                            android:textSize="18sp"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="wrap_content">

                    <id.co.wika.pcddashboard.components.DashboardItemView
                        android:id="@+id/dashboard_item_view_1"
                        app:title="RKAP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <id.co.wika.pcddashboard.components.DashboardItemView
                        android:id="@+id/dashboard_item_view_2"
                        app:title="Ri s/d Jan 2016"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <id.co.wika.pcddashboard.components.DashboardItemView
                        android:id="@+id/dashboard_item_view_3"
                        app:title="Prog 2016"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="150dp"
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <id.co.wika.pcddashboard.components.DashboardItemView
                        android:id="@+id/dashboard_item_view_4"
                        app:title="Sisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </LinearLayout>



                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:id="@+id/dashboard_recycler_view">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>
