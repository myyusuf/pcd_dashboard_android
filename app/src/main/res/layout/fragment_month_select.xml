<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MonthSelectFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dashboardSilver"
        android:weightSum="6">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="JAN"
            android:id="@+id/month_button_1"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="FEB"
            android:id="@+id/month_button_2"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="MAR"
            android:id="@+id/month_button_3"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="APR"
            android:id="@+id/month_button_4"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="MEI"
            android:id="@+id/month_button_5"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="JUN"
            android:id="@+id/month_button_6"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
    </LinearLayout>


</FrameLayout>
